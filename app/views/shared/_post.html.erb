<div class="each-post">
  <div class="each-post-heading">
    <p class="post-num">Post  #<%= idx+1 %>: <%= obj.title%> </p>
    <p> <%= obj.text.length > 80 ? obj.text.first(80) + '...' : obj.text %> </p>
    <%= link_to ('View post ' + (idx+1).to_s) , user_post_path(@user.id, obj.id), class: "view-post"  %>
  </div>
  <div class="post-interactions">
    <span>Comments: <%= obj.comments_counter %>, </span>
    <span> Likes: <%= obj.likes_counter %> </span>
  </div>
  <% if details && comments.length > 0 %>
    <%= render '/shared/comments', comments: comments %>
  <% end %>
</div>
