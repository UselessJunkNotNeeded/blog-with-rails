<div class="each-post">
  <p class="post-num">Post  #<%= idx+1 %> </p>
  <p> <%= obj.text %> </p>
  <div class="post-interactions">
    <span>Comments: <%= obj.comments_counter %>, </span>
    <span> Likes: <%= obj.likes_counter %> </span>
  </div>
</div>
<% if details && comments.length > 0 %>
  <div class="comments">
    <% comments.each do |comment| %>
      <%= render '/shared/comments', comment: comment %>
    <% end %>
  </div>
<% end %>
