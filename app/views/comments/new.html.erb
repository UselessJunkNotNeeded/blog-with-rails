<h1>Create new comments</h1>
<% if @comment.errors.any? %>
  <div class="errors">
    <h2>THe following errors prevented the comment from being saved</h2>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<%end%>
<%= @user.id %>
<%= @post.id %>
<%= form_with model: @comment, url: user_post_comments_path(@user.id, @post.id), method: :post, local: true do |f| %>
  <p>
    <%= f.label :text %>
    <br/>
    <%= f.text_area :text, required: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
