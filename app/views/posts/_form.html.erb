<% if @post.errors.any? %>
  <div class="errors">
    <h2>THe following errors prevented the post from being saved</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<%end%>

<%= form_with model: @post, url: user_posts_path, method: :post, local: true do |f| %>
<div class="devise-form">
  <div class="field">
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :text %><br/>
        <%= f.text_field :text %>
    </div>
    <div class="actions">
        <%= f.submit %>
     </div>
</div>
<% end %>
