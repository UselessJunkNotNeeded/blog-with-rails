<% if @post.errors.any? %>
  <div class="errors">
    <h2>THe following errors prevented the post from being saved</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<%end%>

<%= form_with model: @post, url: user_posts_path, method: :post, local: true do |f| %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %>
    <br/>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
